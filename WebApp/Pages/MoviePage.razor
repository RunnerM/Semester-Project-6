@page "/Movie/{id}"

<MovieDetailCard movieId="@_movieId"></MovieDetailCard>
<CastCard MovieId="@_movieId"></CastCard>



@code {
    [Parameter]
    public string Id { get; set; }
    
    private int _movieId;

    protected override void OnInitialized()
    {
        _movieId = int.Parse(Id);
    }

}