@using System.Security.Claims
@using global::Data.TMDBDomain
@using WebApp.DataServices.Services.TMDB
@inject IDataService DataService
@inject IHttpContextAccessor _httpContextAccessor


@page "/"
@attribute [Authorize]

<PageTitle>Home</PageTitle>

<AuthorizeView>
	<Authorized>

        
	</Authorized>

	<NotAuthorized>

        
	</NotAuthorized>
</AuthorizeView>
<MudDivider Style="margin-bottom:2px;" DividerType="DividerType.FullWidth" > </MudDivider>
<MudDivider Style="margin-bottom:2px;height:10px" DividerType="DividerType.FullWidth" > </MudDivider>
<MovieCarousel/>
<MudDivider Style="margin-top:2px;height:10px" DividerType="DividerType.FullWidth" > </MudDivider>

@if (_topRatedMovies==null)
{
    return;
}
<MudDivider Style="margin-top:10px;" DividerType="DividerType.FullWidth" > </MudDivider>
<MovieSlider Category="Top Rated Movies" Movies="@_topRatedMovies"/>
<MudDivider Style="margin-top:6px;" DividerType="DividerType.FullWidth" > </MudDivider>

@if (_NowPlayingMovies==null)
{
    return;
}
<MudDivider Style="margin-bottom:10px;" DividerType="DividerType.FullWidth" > </MudDivider>
<MovieSlider Category="Now Playing" Movies="@_NowPlayingMovies"/>
<MudDivider Style="margin-top:6px;" DividerType="DividerType.FullWidth" > </MudDivider>

@if (_UpcomingMovies==null)
{
    return;
}
<MudDivider Style="margin-bottom:10px;" DividerType="DividerType.FullWidth" > </MudDivider>
<MovieSlider Category="Upcoming Movies" Movies="@_UpcomingMovies"/>
<MudDivider Style="margin-top:6px;" DividerType="DividerType.FullWidth" > </MudDivider>

@if (_PopularMovies==null)
{
    return;
}
<MudDivider Style="margin-bottom:10px;" DividerType="DividerType.FullWidth" > </MudDivider>
<MovieSlider Category="Popular now" Movies="@_PopularMovies"/>
<MudDivider Style="margin-top:6px;" DividerType="DividerType.FullWidth" > </MudDivider>



@if (PopularPeople == null)
{
    return;
}
<MudDivider Style="margin-bottom:10px;" DividerType="DividerType.FullWidth" > </MudDivider>
<PersonSlider Category="Popular People" People="PopularPeople"/>
<MudDivider Style="margin-top:6px;" DividerType="DividerType.FullWidth" > </MudDivider>


<UserToplistView/>



@code {
    private ClaimsPrincipal? User;
    private string? GivenName;
    private List<TMDBMovie> _topRatedMovies{ get; set; }
    private List<TMDBPerson> PopularPeople { get; set; }
    private List<TMDBMovie> _NowPlayingMovies{ get; set; }
    private List<TMDBMovie> _PopularMovies{ get; set; }
    private List<TMDBMovie> _UpcomingMovies{ get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        try
        {
            // Set the user to determine if they are logged in
            User = _httpContextAccessor.HttpContext.User;
            // Try to get the GivenName
            var givenName =
                _httpContextAccessor.HttpContext.User
                .FindFirst(ClaimTypes.GivenName);
            if (givenName != null)
            {
                GivenName = givenName.Value;
            }
            else
            {
                GivenName = User.Identity.Name;
            }

        }
        catch { }


    }

    protected override async Task OnInitializedAsync()    {
        _topRatedMovies = await DataService.GetTopRatedMoviesAsync();
        PopularPeople = await DataService.GetPopularPersonalAsync();
        _NowPlayingMovies = await DataService.GetNowPlayingMovies();
        _PopularMovies = await DataService.GetPopularMovies();
        _UpcomingMovies = await DataService.GetUpcomingMovies();
    }

    
}