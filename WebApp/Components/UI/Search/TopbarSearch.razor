@using WebApp.DataServices.Services.TMDB
@inject IDataService DataService
@inject NavigationManager NavigationManager

<MudTextField Adornment="Adornment.End" AdornmentColor="Color.Dark" AdornmentIcon="@Icons.Outlined.Search" @bind-Value="SearchTerm" OnAdornmentClick="@OnSearchClick"  Style="width: 400px; color: white"></MudTextField>

@code {
    public string? SearchTerm { get; set; }

    protected override void OnInitialized()
    {
        SearchTerm = string.Empty;
    }

    private void OnSearchClick(MouseEventArgs obj)
    {
        NavigationManager.NavigateTo("/search/" + SearchTerm);
        StateHasChanged();
    }

}