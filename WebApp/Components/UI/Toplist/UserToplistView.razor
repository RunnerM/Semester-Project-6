    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="@nameof(Model.Rank)">@context.Rank</MudTd>
        <MudTd DataLabel="@nameof(Model.Title)">@context.Title</MudTd>
        <MudTd DataLabel="@nameof(Model.ReleaseDate)">@context.ReleaseDate</MudTd>
        <MudTd Title="up">
            <MudIconButton Size="@Size.Small" Icon="@Icons.Outlined.ArrowUpward" OnClick="@(() => OnUp(@context))"/>
        </MudTd>
        <MudTd DataLabel="down">
            <MudIconButton Size="@Size.Small" Icon="@Icons.Outlined.ArrowDownward" OnClick="@(() => OnDown(@context))"/>
        </MudTd>
        <MudTd DataLabel="down">
            <MudIconButton Size="@Size.Small" Icon="@Icons.Outlined.Delete" OnClick="@(() => OnDelete(@context))"/>
        </MudTd>
    </RowTemplate>
</MudTable>


