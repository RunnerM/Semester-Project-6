    <MudImage ObjectFit="ObjectFit.Cover" Src="@PictureSrc" Width="100" Height="180" Alt="Alt" Elevation="25" Class="rounded-lg ma-4"/>
    <MudText Color="Color.Primary" Align="Align.Center" Typo="Typo.caption">@Title</MudText>
</MudPaper>
    
    
@code {
    [Parameter]
    public string PictureSrc { get; set; }
    
    [Parameter]
    public string Title { get; set; }

    protected override void OnParametersSet()
    {
        
    }

}