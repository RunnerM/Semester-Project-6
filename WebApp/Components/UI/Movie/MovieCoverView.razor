@inject NavigationManager NavigationManager
<MudPaper Class="d-flex flex-column" MaxWidth="130px" Elevation="3" @onclick="OnClickMovie">
    <MudImage ObjectFit="ObjectFit.Cover" Src="@PictureSrc" Width="100" Height="180" Alt="Alt" Elevation="25" Class="rounded-lg ma-4"/>
    <MudText Color="Color.Primary" Align="Align.Center" Typo="Typo.caption" Style="user-select: none">@Title</MudText>
    
</MudPaper>
    
    
@code {
    [Parameter]
    public string PictureSrc { get; set; }
    
    [Parameter]
    public string Title { get; set; }
    
    [Parameter]
    public string Id { get; set; }

    private void OnClickMovie()
    {
        NavigationManager.NavigateTo("/Movie/" + Id);
    }

}