@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Authorization


<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Default" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudItem Style="padding-bottom:22px">
            <TopbarSearch/>
        </MudItem>
        <MudSpacer/>
        <MudTooltip Text="@DarkModeText" Placement="Placement.Bottom">
            <MudToggleIconButton Icon="@Icons.Material.Filled.LightMode" ToggledIcon="@Icons.Material.Filled.DarkMode" ToggledChanged="@ToggleTheme" Color="Color.Default"></MudToggleIconButton>
        </MudTooltip>
        <LoginControl/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" Elevation="1">
        <MudDrawerHeader>
            <MudStack Row="true">
                <MudIcon Icon="@Icons.Custom.Uncategorized.Sausage" Color="Color.Secondary" Size="Size.Large"/>
                <MudText Typo="Typo.h6" Style="padding-top: 5px">Adonis Prime</MudText>
            </MudStack>
        </MudDrawerHeader>
        <MudDivider Class="my-2"/>
        <NavMenu/>

    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">

        <MudContainer Class="mt-6">
            @Body
        </MudContainer>

    </MudMainContent>
</MudLayout>

<MudThemeProvider Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

@code{
    private bool _open = false;
    private string _searchTerm = "";
    public MudTheme _theme = new();
    public bool _isLightMode = true;

    public string DarkModeText { get; set; } = "Dark Mode";


    private void ToggleTheme()
    {
        _isLightMode = !_isLightMode;
        if (!_isLightMode)
        {
            _theme = GenerateDarkTheme();
            DarkModeText = "Light Mode";
            StateHasChanged();
        }
        else
        {
            _theme = new MudTheme();
            DarkModeText = "Dark Mode";
            StateHasChanged();
        }
    }

    private MudTheme GenerateDarkTheme() => new MudTheme
    {
        Palette = new Palette()
        {
            Black = "#27282f",
            Background = "#32343d",
            BackgroundGrey = "#27282f",
            Surface = "#373840",
            TextPrimary = "#ffffffb2",
            TextSecondary = "rgba(255,255,255, 0.50)",
            DrawerText = "#424242ff",
            DrawerBackground = "rgb(0,163,68)",
            DrawerIcon = "rgb(255,31,105)",
            AppbarBackground = "#ffffffff",
            AppbarText = "424242ff"
        }
    };


    void ToggleDrawer()
    {
        _open = !_open;
    }



}