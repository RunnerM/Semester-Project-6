@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Authorization


<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Default" Edge="Edge.Start"  OnClick="@ToggleDrawer"/>
        <MudItem Style="padding-bottom:22px">
            <TopbarSearch/>
        </MudItem>
        <MudSpacer/>
            <LoginControl/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" Elevation="1" Color="Color.Primary">
        <MudDrawerHeader>
            <MudStack Row="true">
                <MudIcon Icon="@Icons.Custom.Uncategorized.Sausage" Color="Color.Secondary" Size="Size.Large"/>
                <MudText Typo="Typo.h6" Style="padding-top: 5px">Adonis Prime</MudText>
            </MudStack>
        </MudDrawerHeader>
        <MudDivider Class="my-2" />
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode"/>
</MudLayout>

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

@code{
    private bool _open = false;
    private string _searchTerm = "";
    public MudTheme _theme = new();
    public bool _isDarkMode;

    void ToggleDrawer()
    {
        _open = !_open;
    }
    
    

}

